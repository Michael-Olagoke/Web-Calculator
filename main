<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>  Web calculator </title>
    <style>
        body{
            background-color: cadetblue;
        }
        div#body{
            width:400px;
            margin:30px auto;
        }
        div{
            margin:0;
            padding:0;
        }
        div#display{
            background-color: black;
            color: white;
            padding:20px 3px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            text-align:right;
            font-size:40px;
            font-family: 'Courier New', Courier, monospace;
        }
        div#keys{
            display: grid;
            grid-template-columns: 1fr 1fr 1fr 1fr;
            grid-template-rows: 80px 80px 80px 80px 80px; grid-gap:1px;          background-color: lightgray; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;
        }
        button{
            background-color:white;
            border:0;
            font-family:helvetica;
            font-size:20px;
        }
        button.operator{
            background: gainsboro;
        }
        button.equal{
            grid-row-start: 2;
            grid-row-end: 6;
            grid-column-start: 4;
            grid-column-end: 5;
            background:rgba(255, 145, 0, 0.788);
        }
    </style>
</head>
<body>
    <div id="body">
        <div id="display">0</div>
        <div id="keys">
            <button class="operator" data-action='Add'>+</button>
            <button class="operator" data-action='Subtract'>-</button>
            <button class="operator" data-action='Multiply'>&times;</button>
            <button class="operator" data-action='Divide'>÷</button>
            <button>7</button>
            <button>8</button>
            <button>9</button>
            <button>4</button>
            <button>5</button>
            <button>6</button>
            <button>1</button>
            <button>2</button>
            <button>3</button>
            <button>0</button>
            <button data-action='decimal'>.</button>
            <button id="clear" data-action='clear'>AC</button>
            <button class="equal" data-action='Calculate'>=</button>
        </div>
        </div>
    </div>
    <script>
        const calculator = document.querySelector('div#body')
        const keys = calculator.querySelector('div#keys')
        const display = document.querySelector('div#display')
        const clearButton = keys.querySelector('#clear')

        // assign an event listener to each keys
        keys.addEventListener('click', e =>{
            if(e.target.matches('button')){
                const key = e.target
                const action = key.dataset.action
                const keyContent = key.textContent
                const DisplayedNum = display.textContent
                const number_length = DisplayedNum.length

                // targetting numberic keys
                if(!action){
                    if(DisplayedNum === '0'){
                        display.textContent =  keyContent
                    }else{
                        display.textContent += keyContent
                    }
                }

                // targetting operator keys
                if(action === 'Add' || action === 'Subtract' || action === 'Multiply' || action ==='Divide'){

                    // confirm if previous entry is an operator
                    tracker = number_length - 1
                    if(DisplayedNum[tracker] === '+' ||
                       DisplayedNum[tracker] === '-' ||
                       DisplayedNum[tracker] === '×' ||
                       DisplayedNum[tracker] === '÷'){
                        DisplayedNum.textContent += ''
                    }else{
                        display.textContent += keyContent
                    }
                }

                // targeting decimal key
                if(action === 'decimal'){
                    display.textContent += '.'
                }

                // Alternating between AC and CE
                if(DisplayedNum !== '0'){
                    clearButton.textContent = 'CE'
                }

                // targetting AC key
                if(action === 'clear'){
                    if(clearButton.textContent === 'CE' && number_length != 1){
                        if(DisplayedNum == 'Infinity'){
                            display.textContent = '0'
                        }else{
                            display.textContent = display.textContent.replace( display.textContent[number_length -1 ], '')
                        }
                    }else{
                        display.textContent = '0'
                        clearButton.textContent = 'AC'
                    }
                }

                // targetting '=' button
                if(action === 'Calculate'){
                    // replacing the &times entity with *
                   const result_1 = display.textContent.replace(/×/g, "*")
                //    replacing the ÷ entity with /
                   const result_2 = result_1.replace(/÷/g, "/")
                    display.textContent = eval(result_2)
                }
            }
        })
    </script>
</body>
</html>
